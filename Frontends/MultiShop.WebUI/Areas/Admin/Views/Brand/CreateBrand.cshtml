@model CreateBrandDto

@{
    ViewData["Title"] = "CreateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Marka Ekle</h4>
				<div class="bs-example">
					<form method="post">
						<label>Marka Adı</label>
						<input type="text" class="form-control" asp-for="BrandName" />
						<br />
						<label>Marka Görsel</label>
						<input type="text" class="form-control" asp-for="ImageUrl" />
						<br />
						<button class="btn btn-primary">Marka Ekle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>