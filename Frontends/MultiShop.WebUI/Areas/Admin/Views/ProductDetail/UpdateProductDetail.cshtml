@model UpdateProductDetailDto

@{
	ViewData["Title"] = "UpdateProductDetail";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Ürün Açıklama Güncelle</h4>
				<div class="bs-example">
					<form method="post">
						<input type="hidden" asp-for="ProductDetailId" />
						<input type="hidden" asp-for="ProductId" />
						<label>Ürün Açıklaması</label>
						<textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
						<br />
						<label>Ürün Bilgisi</label>
						<textarea rows="5" class="form-control" asp-for="ProductInformation"></textarea>
						<br />
						<button class="btn btn-primary">Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
